<%- include('include/_header')%>

<%- include('include/_sideBar')%>
<div class="col-xl my-2 ">
    <div class="card mb-4">
      
      <div class="card-body">
           <!-- Vertical Form -->
      <form class="row g-3" action="/admin/show-salesreprot" method="post">
          <div class="col-6">
            <label for="inputNanme4" class="form-label">Date from</label>
            <input type="date" class="form-control"  id="from" name="from"  style="border: 1px solid #000;">
          </div>
          <div class="col-6">
            <label for="fordescription" class="form-label">Date to</label>
            <input type="date" class="form-control" id="to" name="to"  style="border: 1px solid #000;">
          </div>
           
          <p style="color: brown;"><%=message%>  </p>
           
          <div class="text-center">
            <button type="submit" class="btn btn-success" style="float:right;   padding-inline: 50px;"> submit</button>
          </div>
        </form><!-- Vertical Form -->
      </div>
    </div>
  </div>
<div class="row">
    <div class="col-md-12 grid-margin">
        <div class="card card-white h-100">
            <div class="card-heading clearfix">
                <h4 class="card-title">Latest Transaction</h4>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table mb-0">
                        <thead class="bg-light">
                            <tr>
                                 
                                <th>Date</th>
                                <th>Order ID</th>
                                <th>Product Name</th>
                                <th>QTY</th>
                                <th>Amount</th>
                                <th>Total</th>
                                
                                 
                            </tr>
                        </thead>
                        <tbody>
                              <%sales.forEach(order=>{%>
                                <%order.items.forEach(products=>{%>
                            <tr>

                                <td><a href="#"></a><%=order.createdAt.toLocaleDateString('en-GB', { day: 'numeric', month: 'numeric', year: '2-digit' })%> </td>
                                <td><%=order.orderId%></td>
                                <td>
                                    <%=products.item.name%>
                                </td>
                                <td>
                                    <%=products.quantity%>

                                </td>
                                <td>
                                    <%=products.item.price%>
                                </td>
                                <td>
                                    <%=products.sub_total%>
                                </td>
                            </tr>

                                <%})%>
                                <%})%>
                                <!-- <td>
                                    <button type="button" class="btn btn-primary btn-sm btn-rounded">
                                        View Details
                                    </button>
                                </td> -->

                             
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('include/_footer')%>